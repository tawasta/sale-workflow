<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_inherit_sale_stock" model="ir.ui.view">
        <field name="name">sale.order.form.header.commitment.date.invisible</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='commitment_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.header.commitment.date</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <label for="commitment_date" position="attributes">
                <attribute name="string">Expected Date</attribute>
            </label>

            <field name="payment_term_id" position="after">
                <field name="commitment_date" />
            </field>
        </field>
    </record>
</odoo>
