<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="import_sale_order_xlsx_template" model="xlsx.template">
        <field name="res_model">sale.order</field>
        <field name="fname">import_sale_order.xlsx</field>
        <field name="name">Import Sale Order</field>
        <field name="description">Import sale order with its order lines</field>
        <field name="redirect_action" ref="sale.action_quotations" />
        <field name="input_instruction">
            {
                '__IMPORT__': {
                    'sale_order': {
                        '_HEAD_': {
                            'A3': 'partner_id',
                        },
                        'order_line': {
                            'A6': 'product_id',
                            'B6': 'product_uom_qty',
                        }
                    }
                },
            }
        </field>
    </record>
    <function model="xlsx.template" name="load_xlsx_template">
        <value eval="[ref('import_sale_order_xlsx_template')]" />
    </function>
</odoo>
