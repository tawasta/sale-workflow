<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="confirm_multiple_wizard_form" model="ir.ui.view">
        <field name="model">sale.order.mass.confirm</field>
        <field name="arch" type="xml">
            <form string="Confirm Quotations">
                <p>The selected quotations will be confirmed</p>
                <footer>
                    <button string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="confirm"/>
                    or
                    <button string="Cancel"
                        class="oe_link"
                        special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_confirm_multiple" model="ir.actions.act_window">
        <field name="name">Confirm Quotations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.mass.confirm</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
    </record>
</odoo>
