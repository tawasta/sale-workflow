<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="paperformat_product_label" model="report.paperformat">
            <field name="name">A4 Label Sheet</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">50</field>
            <field name="page_width">30</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">2.54</field>
            <field name="margin_bottom">2.54</field>
            <field name="margin_left">2.54</field>
            <field name="margin_right">2.54</field>
            <field name="dpi">96</field>
        </record>

        <record id="action_report_product_label" model="ir.actions.report">
            <field name="name">Product label</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field
                name="report_name"
            >sale_order_product_label.report_product_label</field>
            <field
                name="report_file"
            >sale_order_product_label.report_product_label</field>
            <field
                name="print_report_name"
            >'Product label_%s' % (object.client_order_ref or object.name)</field>
            <field
                name="paperformat_id"
                ref="sale_order_product_label.paperformat_product_label"
            />
            <field name="binding_model_id" ref="sale.model_sale_order" />
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
