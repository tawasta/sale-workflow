<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="report_product_label">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page">

                            <div style="width:100%;">
                                <t t-foreach="o.order_line" t-as="line">
                                    <div
                                        t-attf-style="width:100%; float:left; text-align:center; height: 115px;"
                                    >
                                        <div
                                            t-attf-style="width:100%; padding-top:10px;"
                                        >
                                            <strong><t
                                                    t-esc="line.product_id.default_code"
                                                /></strong>
                                        </div>
                                        <div t-attf-style="width:100%;">
                                            <strong><t
                                                    t-esc="line.product_id.name"
                                                /></strong>
                                        </div>
                                        <div t-attf-style="width:100%;">
                                            <strong><t
                                                    t-esc="'%.0f' % line.product_uom_qty"
                                                /></strong>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
