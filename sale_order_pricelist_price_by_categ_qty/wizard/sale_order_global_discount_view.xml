<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="global_discount_button_form" model="ir.ui.view">
        <field name="model">sale.order.global.discount</field>
        <field name="arch" type="xml">
            <form string="Compute global discount">
                <p>Compute global discount for selected orders</p>
                <footer>
                    <button string="Compute global discount"
                        name="compute_global_discount"
                        type="object"
                        class="oe_highlight"/>
                    or
                    <button string="Cancel"
                        class="oe_link"
                        special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_global_discount_button"
            multi="True"
            key2="client_action_multi" name="Compute global discount"
            res_model="sale.order.global.discount" src_model="sale.order"
            view_mode="form" target="new" view_type="form"
            groups="sales_team.group_sale_manager"/>
</odoo>
