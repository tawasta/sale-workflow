<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.default.parent</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="domain">[('customer', '=', True),('type', 'in', ['contact', 'other'])]</attribute>
            </field>

            <field name="partner_invoice_id" position="attributes">
                <attribute name="domain">['|', ('id', '=', partner_id), '&amp;', ('parent_id', '=', partner_id),('type', '=', 'invoice')]</attribute>
            </field>

            <field name="partner_shipping_id" position="attributes">
                <attribute name="domain">['|', ('id', '=', partner_id), '&amp;', ('parent_id', '=', partner_id),('type', '=', 'delivery')]</attribute>
            </field>

        </field>
    </record>
</odoo>
