<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.configurator.control</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//control//create[@name='add_product_control']"
                position="after"
            >
                <create
                    name="add_configure_control"
                    context="{'open_product_configurator': True}"
                    string="Configure a product"
                    groups="product.group_product_variant"
                />
            </xpath>

            <xpath
                expr="//tree/field[@name='product_template_id']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="optional" />
                <attribute name="string">Product</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_form_configurator" model="ir.ui.view">
        <field name="name">sale.order.form.configurator</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_product_configurator.sale_order_view_form" />
        <field name="priority" eval="99" />
        <field name="arch" type="xml">
            <field name="is_configurable_product" position="replace" />
        </field>
    </record>
</odoo>
