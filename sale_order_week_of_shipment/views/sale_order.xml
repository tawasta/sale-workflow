<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="sale_form_view" model="ir.ui.view">
            <field name="name">sale.order.form.customer.order.date</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- sale_stock-module has a view that replaces sale-module's <div name="commitment_date_div"> -->
                <xpath expr="//field[@name='commitment_date']/.." position="after">
                    <label for="week_of_shipment" class="o_row"/>
                    <div name="week_of_shipment_div">
                        <field name="week_of_shipment" groups="sales_team.group_sale_salesman"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
