<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">sale.order.customer.order.number.config.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@name='quotation_order_setting_container']"
                position="inside"
            >
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="sale_lead_time_from_resource_calendar_setting"
                >
                    <div class="o_setting_right_pane">
                        <label for="sale_lead_time_resource_calendar_id" />
                        <div class="text-muted">
                            If set, Sale Order Lines' lead times take into account e.g. weekends and holidays that are defined in the resource calendar.
                        </div>
                        <field name="sale_lead_time_resource_calendar_id" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
