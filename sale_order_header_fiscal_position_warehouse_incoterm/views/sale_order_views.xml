<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record
        id="view_order_form_header_fiscal_position_warehouse_incoterm"
        model="ir.ui.view"
    >
        <field name="name">sale.order.form.header.fiscal.warehouse.incoterm</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock" />
        <field name="arch" type="xml">
            <field name="warehouse_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="incoterm" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="fiscal_position_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <group name="order_details" position="inside">
                <field
                    name="incoterm"
                    widget="selection"
                    groups="sale_stock.group_display_incoterm"
                />
                <field
                    name="warehouse_id"
                    options="{'no_create': True}"
                    groups="stock.group_stock_multi_warehouses"
                    force_save="1"
                />
                <field name="fiscal_position_id" options="{'no_create': True}" />
            </group>
        </field>
    </record>
</odoo>
