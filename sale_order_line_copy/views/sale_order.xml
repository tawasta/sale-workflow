<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_line_copy" model="ir.ui.view">
        <field name="name">sale.order.form.line.copy</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='company_id']"
                position="after"
            >
                <button
                    name="action_sale_order_line_copy"
                    title="Duplicate"
                    type="object"
                    icon="fa-clone"
                />
            </xpath>

            <!-- Switch to use the new widget that appends the duplication button also to
            section lines -->
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='name']"
                position="attributes"
            >
                <attribute name="widget">sale_order_line_section_name</attribute>
            </xpath>


        </field>
    </record>
</odoo>
