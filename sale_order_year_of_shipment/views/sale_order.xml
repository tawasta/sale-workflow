<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.year.of.shipment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <!-- Note that sale_stock-module has a view that replaces sale-module's <div name="commitment_date_div"> -->
            <xpath expr="//field[@name='commitment_date']/.." position="after">
                <label for="year_of_shipment" class="o_row" />
                <div name="year_of_shipment_div">
                    <field
                        name="year_of_shipment"
                        groups="sales_team.group_sale_salesman"
                    />
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">sale.order.tree.year.of.shipment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="year_of_shipment" />
            </field>
        </field>
    </record>

    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">sale.order.quotation.tree.year.of.shipment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="year_of_shipment" />
            </field>
        </field>
    </record>
</odoo>
