<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.picking.cancel</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="date_order" position="after">
                <field name="pickings_done" invisible="1" />
            </field>

            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="states" />
                <attribute
                    name="attrs"
                >{'invisible': ['|',('pickings_done', '=', True),('state', 'not in', ('draft','sent','sale'))]}</attribute>
            </xpath>

            <xpath expr="//button[@name='action_cancel']" position="before">
                <button
                    name="%(action_sale_order_picking_return)d"
                    string="Cancel"
                    type="action"
                    groups="base.group_user"
                    attrs="{'invisible': ['|',('pickings_done', '=', False),('state', 'not in', ('draft','sent','sale'))]}"
                />
            </xpath>

        </field>
    </record>
</odoo>
