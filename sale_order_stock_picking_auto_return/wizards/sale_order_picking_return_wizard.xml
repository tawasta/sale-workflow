<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="sale_order_picking_return_wizard">
        <field name="name">Confirm sale order picking return</field>
        <field name="model">sale.order.picking.return.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <p class="oe_grey">
                    <span
                    >Do you want to return all deliveries linked to this sale?</span><br
                    />
                    <span>This will return the delivered items to stock.</span>
                </p>

                <footer>
                    <button
                        name="action_return_picking"
                        string="Yes"
                        type="object"
                        class="oe_highlight"
                    />
                    or
                    <button
                        name="action_cancel"
                        string="No"
                        type="object"
                        class="oe_highlight"
                    />
                    or
                    <button string="Back" special="cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

   <record id="action_sale_order_picking_return" model="ir.actions.act_window">
        <field name="name">Confirm sale order picking return</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.picking.return.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_order_picking_return_wizard" />
        <field name="target">new</field>
    </record>
</odoo>
