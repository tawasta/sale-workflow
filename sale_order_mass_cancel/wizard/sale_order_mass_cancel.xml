<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_sale_order_mass_cancel_wizard" model="ir.ui.view">
        <field name="model">sale.order.mass.cancel</field>
        <field name="arch" type="xml">
            <form string="Cancel Quotations">
                <p>The selected quotations will be cancelled</p>
                <footer>
                    <button
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="confirm"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_mass_cancel" model="ir.actions.act_window">
        <field name="name">Cancel Quotations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.mass.cancel</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_manager'))]" />
        <field name="binding_model_id" ref="sale.model_sale_order" />
    </record>
</odoo>
