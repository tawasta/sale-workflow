<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.customer.contact</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30" />
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//div[@id='invoice_delivery_addresses']" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="invoice_use_commercial_partner"
                >
                    <div class="o_setting_left_pane">
                        <field name="invoice_force_commercial_partner" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="invoice_force_commercial_partner" />
                        <div class="text-muted">
                            Force commercial partner on invoices
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>
