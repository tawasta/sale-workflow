<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_tree_status_colors" model="ir.ui.view">
        <field name="name">sale.order.tree.status.colors</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute
                    name="decoration-success"
                >invoice_status == 'invoiced'</attribute>
                <attribute
                    name="decoration-info"
                >invoice_status == 'to invoice'</attribute>
                <attribute
                    name="decoration-warning"
                >invoice_status == 'upselling'</attribute>
            </tree>
        </field>
    </record>
</odoo>
