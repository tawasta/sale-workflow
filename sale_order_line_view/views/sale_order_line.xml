<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_line_tree" model="ir.ui.view">
        <field name="name">sale.order.line.tree</field>
        <field name="model">sale.order.line</field>
        <field name="priority" eval="99" />
        <field name="arch" type="xml">
            <tree string="Sales Order Lines" create="false" delete="false">
                <field name="order_id" optional="show" />
                <field name="product_id" optional="show" />
                <field name="order_partner_id" optional="show" />
                <field name="name" optional="show" />
                <field name="state" optional="show" />
                <field name="date_order" optional="show" />
                <field name="product_uom_qty" string="Qty" optional="show" />
                <field name="qty_delivered" optional="show" />
                <field name="qty_invoiced" optional="show" />
                <field name="qty_to_invoice" optional="show" />
                <field
                    name="product_uom"
                    string="Unit of Measure"
                    groups="uom.group_uom"
                    optional="show"
                />
                <field
                    name="price_subtotal"
                    sum="Total"
                    widget="monetary"
                    optional="show"
                />
                <field name="margin_percent" optional="show" />
            </tree>
        </field>
    </record>
    <record id="sale_order_line_action" model="ir.actions.act_window">
        <field name="name">Sale Order Lines</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">tree,pivot,graph,form</field>
        <field name="view_id" ref="view_order_line_tree" />
    </record>
    <menuitem
        id="menu_sale_order_line"
        action="sale_order_line_action"
        parent="sale.sale_order_menu"
        groups="sales_team.group_sale_salesman,sales_team.group_sale_manager"
        sequence="13"
    />
</odoo>
